@using Gamebook.Web.Areas.Administration.Models
@model ResultViewModel

@if (Model.Result > 0)
{
    <div class="alert alert-info">Success</div>
}
<div id="createdBookContainer" class="alert alert-info" style="display: none">
</div>
<div class="panel panel-primary list-panel" id="list-panel">
    <div class="panel-heading list-panel-heading">
        <button type="button" class="btn btn-default btn-md" data-toggle="modal" data-url="@Url.Action("Create","Book")" id="btnCreateBook">
            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Add Book
        </button>
    </div>
    <div class="panel-body">
        <table id="books-data-table" class="table table-striped table-bordered"></table>
    </div>
</div>
<div class="modal fade" id="createBookModal" tabindex="-1" role="dialog" aria-labelledby="CreateBookModal" aria-hidden="true" data-backdrop="static">
    <div id="createBookContainer">
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/custom/adminBookTable")
}